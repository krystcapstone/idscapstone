    <div class="main_content">
        <header>
            <div class="search_wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Search here"/>
            </div>
            <div class="user_wrapper">
                 <h4>Admin </h4><span>Administrator</span>
            </div>
        </header>
        <main>
            <div class="viewboxcont">
                <div class="viewbox">
                    <h2>
                        Reports
                    </h2>
                    <hr class="title">
                    <div class="cliptable">
                        <table>
                            <thead>
                              <tr>
                                  <th>Date</th>
                                  <th>No. of Reports</th>
                                  <th></th>
                              </tr>
                            </thead>
                        
                            <tbody>
                        <% for(var i=0; i < data.length; i++) { %>
                            <tr>  
                                <td><%= data[i].datetime.getFullYear() %>-<%= data[i].datetime.getMonth()+1 %>-<%= data[i].datetime.getDate()%></td>
                                <td><%= data[i].no_of_reports %></td>
                                <td><form action='/reportview' method="post">
                                  <input type="hidden" name = "reportdate" value = "<%= data[i].datetime.getFullYear() %>-<%= data[i].datetime.getMonth()+1 %>-<%= data[i].datetime.getDate()%>"/>
                                      <input name="button" type="submit" value=">"/>
                                 
                              </form></td>
                            </tr>
                            <% } %>
                        </tbody>
                      
                    </table>
