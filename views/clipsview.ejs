<html>
    <head>
        <title>Clips</title>
        <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
        <link rel ="stylesheet" href="style.css">

    </head>

    <body>
        <div class="sidebar">
            <div class="idsname">
                <h1><span>IDS Dashboard</span> </h1>
            </div>
            <div class="sidebar_menu">
              <a href="home"><span class="las la-home"></span>
                <h3>Overview</h3></a>
                <a href="camera"><span class="las la-camera"></span>
                <h3>Camera</h3></a>
                <a href="clips"  class="active"><span class="las la-chart-pie"></span>
                <h3>Clips</h3></a>
                <a href="snaps"><span class="las la-camera"></span>
                <h3>Snapshots</h3></a>
                <a href="reports"><span class="las la-flag"></span>
                <h3>Reports</h3></a>
                <a href="logs"><span class="las la-list"></span>
                <h3>Logs</h3></a>
                <a href="logout"><span class="las la-sign-out-alt"></span>
                <h3>Logout</h3></a>
                 

        </div>
    </div>
    <div class="main_content">
        <header>
            <div class="search_wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Search here"/>
            </div>
            <div class="user_wrapper">
                 <h4>Admin </h4><span>Administrator</span>
            </div>
        </header>
        <main>
          <div class="viewboxcont">
            <div class="viewbox">
              <h2><%= data[0].date.getFullYear() %>-<%= data[0].date.getMonth()+1 %>-<%= data[0].date.getDate()%></h2>
              <hr class="title">
              <div class="cliptable">
                <table>
                  <thead>
                    <tr>
                        <th>Time</th>
                        <th>Status</th>
                        <th>Remarks</th>
                        <th>Camera</th>
                        <th>Video</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0; i < data.length; i++) { %>
                      <tr>  
                          <td><%= data[i].time%></td>
                          <form action="/clipsview" method="post">
                            <input type="hidden" name = "update" value="1"/>
                            <input type="hidden" name = "clipdate" value = "<%= data[0].date.getFullYear()%>-<%= data[0].date.getMonth()+1%>-<%= data[0].date.getDate()%>"/>
                            <input type="hidden" name = "time" value ="<%= data[i].time%>"/>
                            <input type="hidden" name = "status" value = "<%= data[i].status %>"/>
                            
                            <td class ="<%= data[i].status[0] %>"><input type="submit" class="rectangle" value="<%= data[i].status %>"/></td>
                        
                          </form>
                          <form action="/clipsview" method="post">
                            <input type="hidden" name = "update" value="2"/>
                            <input type="hidden" name = "clipdate" value = "<%= data[0].date.getFullYear()%>-<%= data[0].date.getMonth()+1%>-<%= data[0].date.getDate()%>"/>
                            <input type="hidden" name = "time" value ="<%= data[i].time%>"/>
                            <td><input type="text" name = "remarks" value = "<%= data[i].remarks %>"/>
                              <input type="submit" value="Save"/></td>
                  
                          </form>
                          <td><%= data[i].name %></td>
                          <td><video id="videoPlayer" width="75%" height="75%" controls>
                            <source src="http://localhost:3000/video/<%= data[i].videofilename%>" type="video/mp4">
                          </video></td>
                       
                      </tr>
                      
                      <% } %>
                    <!-- <tr onclick="window.location.href= 'clipsview.html'">
                      <td>07:04:20</td>
                      <td>Not Reviewed</td>
                      <td>N/A</td>
                    </tr>
                    <tr onclick="window.location.href= 'clipsview.html'">
                        <td>07:04:20</td>
                        <td>Not Reviewed</td>
                        <td>N/A</td>
                      </tr> -->
                  </tbody>
                    
                </table>
                </div>
          </div>
            
        </main>

       
    
    </div>
   
    




    </body>
</html>